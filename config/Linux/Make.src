.SUFFIXES: .asm


INCL = $(LROOT)/incl
SLIB  = $(LROOT)/lib$L.a
o     = .o

.c.o:
	$(PLAIN_C) $(WERR) $(CFLAGS) $(DFLAGS) -DLEDA_INSTALL -I$(INCL) -c $*.c

.cpp.o:
	$(CC) $(WERR) $(CFLAGS) $(DFLAGS) -DLEDA_INSTALL -I$(INCL) -c $*.cpp

.asm.o:
	$(ASM) $(AFLAGS) $*.asm -o $*.o



all: $(SLIB)
	@true

include Make.lst

$(SLIB): $(OBJECTS)
	ar cr $(SLIB) $?
	ranlib $(SLIB)

obj: $(OBJECTS)
	@true

touch:
	touch -c *.o
	ar cr $(SLIB) *.o

clean:
	rm -f $(OBJECTS)

